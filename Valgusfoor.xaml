<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Valgusfoor"
             Title="Valgusfoor">

    <ContentPage.Resources>
        <Style TargetType="Button">
            <Setter Property="BackgroundColor" Value="Black"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="18,10"/>
        </Style>
    </ContentPage.Resources>

    <Grid>
        <Image Source="pic.jpg" Aspect="AspectFill"/>

        <VerticalStackLayout Padding="20" Spacing="16" HorizontalOptions="Center" VerticalOptions="Center">

            <Frame BackgroundColor="#111111"
             BorderColor="#2A2A2A"
             CornerRadius="40"
             HasShadow="True"
             Padding="24"
             HorizontalOptions="Center">

                <VerticalStackLayout Spacing="18" HorizontalOptions="Center">

                    <Frame x:Name="RedCircle"
                 WidthRequest="120" HeightRequest="120"
                 CornerRadius="60"
                 BackgroundColor="Gray"
                 HasShadow="False"
                 HorizontalOptions="Center">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="RedCircle_Tapped"/>
                        </Frame.GestureRecognizers>
                        <Label x:Name="RedText"
                   Text="Punane"
                   FontSize="18"
                   HorizontalOptions="Center" VerticalOptions="Center"
                   HorizontalTextAlignment="Center" VerticalTextAlignment="Center"
                   InputTransparent="True"/>
                    </Frame>

                    <Frame x:Name="YellowCircle"
                 WidthRequest="120" HeightRequest="120"
                 CornerRadius="60"
                 BackgroundColor="Gray"
                 HasShadow="False"
                 HorizontalOptions="Center">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="YellowCircle_Tapped"/>
                        </Frame.GestureRecognizers>
                        <Label x:Name="YellowText"
                   Text="Kollane"
                   FontSize="18"
                   HorizontalOptions="Center" VerticalOptions="Center"
                   HorizontalTextAlignment="Center" VerticalTextAlignment="Center"
                   InputTransparent="True"/>
                    </Frame>

                    <Frame x:Name="GreenCircle"
                 WidthRequest="120" HeightRequest="120"
                 CornerRadius="60"
                 BackgroundColor="Gray"
                 HasShadow="False"
                 HorizontalOptions="Center">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="GreenCircle_Tapped"/>
                        </Frame.GestureRecognizers>
                        <Label x:Name="GreenText"
                   Text="Roheline"
                   FontSize="18"
                   HorizontalOptions="Center" VerticalOptions="Center"
                   HorizontalTextAlignment="Center" VerticalTextAlignment="Center"
                   InputTransparent="True"/>
                    </Frame>

                </VerticalStackLayout>
            </Frame>

            <HorizontalStackLayout Spacing="16" HorizontalOptions="Center">
                <Button Text="Sisse" Clicked="OnSisseClicked"/>
                <Button Text="Välja" Clicked="OnValjaClicked"/>

                <Frame Padding="8,6" CornerRadius="12" BackgroundColor="#80000000" HasShadow="False">
                    <Grid ColumnDefinitions="Auto,Auto" VerticalOptions="Center">
                        <Label Grid.Column="0"
                   Text="Öö režiim"
                   TextColor="White"
                   FontAttributes="Bold"
                   VerticalOptions="Center"
                   VerticalTextAlignment="Center"
                   Margin="0,0,8,0"/>
                        <Switch Grid.Column="1"
                    x:Name="NightSwitch"
                    Toggled="NightSwitch_Toggled"
                    VerticalOptions="Center"/>
                    </Grid>
                </Frame>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </Grid>
</ContentPage>